<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:gravity="center_horizontal"
            android:text="拨号"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_call"
            android:gravity="center_horizontal"
            android:text="联系人"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_crop"
            android:gravity="center_horizontal"
            android:text="通话"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_edit"
            android:gravity="center_horizontal"
            android:text="收藏"
            android:textColor="#ffffff" />
    </LinearLayout>
    <!-- inputType:输入方式 -->

    <EditText
        android:id="@+id/number_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="#84ff84"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="1"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="2"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="3"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
android:layout_height="45dp"        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="4"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="5"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="6"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
android:layout_height="45dp"        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="7"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="8"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="9"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="*"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="0"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="0dp"
android:layout_height="45dp"            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="onclick"
            android:text="#"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
android:layout_height="45dp"        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            
            android:src="@android:drawable/ic_dialog_alert" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="call"
            android:layout_marginLeft="15dp"
            android:src="@android:drawable/ic_input_get" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="delete"
            android:layout_marginLeft="15dp"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>

</LinearLayout>